<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        client="administrator"
        method="upgrade">
    <name>qladminsitemodule</name>
    <author>Mareike Riegel</author>
    <creationDate>2015</creationDate>
    <copyright>ql.de</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>mareike.riegel@ql.de</authorEmail>
    <authorUrl>ql.de</authorUrl>
    <version>1.0.0</version>
    <description>MOD_QLADMINSITEMODULE_XML_DESCRIPTION</description>
    <updateservers>
        <server type="extension" priority="1" name="qladminsitemodule - Updates">https://github.com/hoochicken/mod_qladminsitemodule/archive/refs/tags/v1.0.0.zip</server>
    </updateservers>
    <files>
        <filename module="mod_qladminsitemodule">mod_qladminsitemodule.php</filename>
        <folder>_jupdate</folder>
        <folder>css</folder>
        <folder>js</folder>
        <folder>language</folder>
        <folder>tmpl</folder>
        <folder>php</folder>
        <filename>QladminsitemoduleHelper.php</filename>
        <filename>index.html</filename>
        <filename>license.txt</filename>
        <filename>mod_qladminsitemodule.xml</filename>
    </files>
    <media folder="media" destination="mod_qladminsitemodule">
        <folder>css</folder>
        <folder>js</folder>
    </media>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_qladminsitemodule.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_qladminsitemodule.sys.ini</language>
        <language tag="de-DE">language/de-DE/de-DE.mod_qladminsitemodule.ini</language>
        <language tag="de-DE">language/de-DE/de-DE.mod_qladminsitemodule.sys.ini</language>
    </languages>
    <config>
        <fields name="params" addfieldpath="/modules/mod_qladminsitemodule/php/fields" addrulepath="/modules/mod_qladminsitemodule/php/rules">
            <fieldset name="basic">

            </fieldset>

            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>

                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>

                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
                <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
